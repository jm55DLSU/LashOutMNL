<html>

<head>
    <title>LashOut MNL</title>
    <link rel="stylesheet" href="styles/global.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="scripts/home.js"></script>
    <script src="scripts/index.js"></script>
    <link rel="stylesheet" href="styles/page_services.css">
</head>

<body>
    {{> nav }}

    <div id="services-container">

        <h1>Services</h1>
        
            <div class="category-container" id="lashes">
                <h2>Lashes</h2>
                {{#each serviceItem}}
                    {{#ifCategory Category "Lashes"}}
                        {{> serviceItem}}
                    {{/ifCategory}}
                {{/each}}
            </div>

            <div class="category-container" id="brows">
                <h2>Brows</h2>
                {{#each serviceItem}}
                    {{#ifCategory Category "Brows"}}
                        {{> serviceItem}}
                    {{/ifCategory}}
                {{/each}}
            </div>
                
            <div class="category-container" id="brows-retouch">
                <h2>Brows Retouch</h2>
                
                {{#each serviceItem}}
                    {{#ifCategory Category "Lashes Retouch"}}
                        {{> serviceItem}}
                    {{/ifCategory}}
                {{/each}}
            </div>
               
            <div class="category-container" id="nails">
                <h2>Nails</h2>
                {{#each serviceItem}}
                    {{#ifCategory Category "Lashes Retouch"}}
                        {{> serviceItem}}
                    {{/ifCategory}}
                {{/each}}
            </div>    
    </div>
</body>

</html>